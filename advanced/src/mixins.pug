mixin skillsList(skillsName, skills)
  h3(class="title title_size skills__title")= skillsName.slice(0, 1).toUpperCase() + skillsName.slice(1)
  ul.skills__list
    each skill in skills
      li.skills__item= skill
        div.skills__svg
          svg.skills__svg
            circle(r="67")

mixin directionArrow(directions)
  .controls
    ul.controls__list
      each direction in directions
        li.controls__item
          a(href="#").controls__link
            case direction
              when "up"
                +icon("arrow", `arrow__${direction}`)
              when "down"
                +icon("arrow", `arrow__${direction}`)
              when "left"
                +icon("arrow", `arrow__${direction}`)
              when "right"
                +icon("arrow", `arrow__${direction}`)