.tag {
    max-width: 280px;
    &__list {
        display: flex;
        justify-content: space-between;
        margin-bottom: 50px;
    }
    &__item {
        border-radius: 22px;
        background-color: rgba($tag-list-bg, .1);
        padding: 15px 19px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 15px;
        font-weight: 600;
    }
}